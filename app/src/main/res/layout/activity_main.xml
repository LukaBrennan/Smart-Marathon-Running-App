<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strava_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/strava_orange"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/headerTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/training_plan"
                    style="@style/TextHeader"
                    android:textColor="@color/strava_light_text"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/dataSourceBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live (Strava)"
                    android:textStyle="bold"
                    android:textColor="@color/strava_orange"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/activityTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/twelve_week_plan"
                    style="@style/TextSubheader"
                    android:textColor="@color/strava_light_text"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/strava_light_text"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_week"
                    style="@style/TextSubheader"
                    android:textColor="@color/strava_orange"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/strava_divider"/>

                <LinearLayout
                    android:id="@+id/weekStatsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/strava_light_text"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_week_s_plan"
                    style="@style/TextSubheader"
                    android:textColor="@color/strava_orange"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/strava_divider"/>

                <LinearLayout
                    android:id="@+id/weekContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/debugButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="8dp">

            <Button
                android:id="@+id/btnSimulateRun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simulate Run"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/strava_orange"
                android:textColor="@color/strava_light_text"/>

        </LinearLayout>

        <Button
            android:id="@+id/feedbackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/show_feedback"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="16dp"
            android:backgroundTint="@color/strava_orange"
            android:textColor="@color/strava_light_text"
            android:elevation="4dp"
            style="@style/TextSubheader"/>
    </LinearLayout>
</ScrollView>
